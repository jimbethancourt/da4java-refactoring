<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension 
         point="org.eclipse.ui.menus">
      <menuContribution
      		locationURI="popup:org.evolizer.core.ui.menu?after=features">
         <menu
               icon="icons/famix_icon.png"
               id="org.evolizer.famix.importer.ui.menu"
               label="Famix">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <adapt 
                     		type="org.eclipse.core.resources.IResource">
                     </adapt>
                  </and>
               </iterate>
            </visibleWhen>
			<command
					commandId="org.evolizer.famix.ui.extractfamix"
					style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <and>
                        <adapt
                              type="org.eclipse.core.resources.IResource">
	                      <test
	                            property="org.eclipse.core.resources.projectNature"
	                            value="org.eclipse.jdt.core.javanature">
	                      </test>
                        </adapt>
                     </and>
                  </iterate>
               </visibleWhen>
			</command>
			<command
					commandId="org.evolizer.famix.ui.storefamix"
					style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <and>
                        <adapt
                              type="org.eclipse.core.resources.IResource">
	                      <test
	                            property="org.eclipse.core.resources.projectNature"
	                            value="org.evolizer.core.natures.evolizerNature">
	                      </test>
                        </adapt>
                     </and>
                  </iterate>
               </visibleWhen>
			</command>
         </menu>
	  </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.evolizer.famix.ui.commands"
            name="Famix Importer Commands">
      </category>
      <command
            categoryId="org.evolizer.famix.ui.commands"
            id="org.evolizer.famix.ui.extractfamix"
            name="Extract FAMIX">
      </command>
      <command
            categoryId="org.evolizer.famix.ui.commands"
            id="org.evolizer.famix.ui.storefamix"
            name="Store FAMIX">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.evolizer.famix.importer.ui.popup.actions.ParserAction"
            commandId="org.evolizer.famix.ui.extractfamix">
      </handler>
      <handler
            class="org.evolizer.famix.importer.ui.popup.actions.StoreModelAction"
            commandId="org.evolizer.famix.ui.storefamix">
      </handler>
   </extension>
</plugin>
